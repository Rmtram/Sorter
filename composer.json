{
  "name": "rmtram/sorter",
  "type": "library",
  "description": "Simple sort of multiple arrays.",
  "keywords": [
    "sort",
    "multi sort",
    "multiple sort"
  ],
  "homepage": "https://github.com/Rmtram/Sorter",
  "support": {
    "issues": "https://github.com/Rmtram/Sorter/issues",
    "source": "https://github.com/Rmtram/Sorter"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff -v",
    "lintfix": "./vendor/bin/php-cs-fixer fix --diff -v"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Rmtram",
      "email": "rmtram95@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Rmtram\\Sorter\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ],
    "psr-4": {
      "Rmtram\\Sorter\\TestCase\\": "tests/"
    }
  }
}